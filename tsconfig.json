{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src/ts",
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "importHelpers": true,
    "lib": ["dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}